<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:viewBindingIgnore="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvIncrease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_text_content"
                android:textSize="@dimen/sp_14"
                tools:text="暴击+5%" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvIncreaseLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:textColor="@color/color_text_content"
                android:textSize="@dimen/sp_12"
                tools:text="增幅等级" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btIncreaseRefine"
            style="@style/CommonButton"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_34"
            android:text="@string/str_refine" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btIncreasePromote"
            style="@style/CommonButton"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_34"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/common_margin"
            android:text="@string/str_increase" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>